<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sean.myappportfolio.MainActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="My Nanodegree Apps!"
            android:id="@+id/text_header"
            android:layout_gravity="center_horizontal"
        />

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="POPULAR MOVIES"
            android:id="@+id/button_popularMovies"
            android:layout_gravity="center_horizontal"
            android:onClick="popularMovies_OnClick"/>

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="STOCK HAWK"
            android:id="@+id/button_stockHawk"
            android:layout_gravity="center_horizontal"
            android:onClick="stockHawk_OnClick"/>

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="BUILD IT BIGGER"
            android:id="@+id/buildItBigger"
            android:layout_gravity="center_horizontal"
            android:onClick="buildItBigger_OnClick"/>

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="MAKE YOUR APP MATERIAL"
            android:id="@+id/button_makeYourAppMaterial"
            android:layout_gravity="center_horizontal"
            android:onClick="makeYourAppMaterial_OnClick"/>

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="GO UBIQUITOUS"
            android:id="@+id/button_goUbiquitous"
            android:layout_gravity="center_horizontal"
            android:onClick="goUbiquitous_OnClick"/>

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="CAPSTONE"
            android:id="@+id/button_capstone"
            android:layout_gravity="center_horizontal"
            android:onClick="capstone_OnClick"/>

    </LinearLayout>


</RelativeLayout>
